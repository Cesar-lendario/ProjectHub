# Cache control rules for TaskMeet
# HTML nunca deve ser cacheado
<FilesMatch "\.html$">
  Header always set Cache-Control "no-cache, no-store, must-revalidate, max-age=0, private"
  Header always set Pragma "no-cache"
  Header always set Expires "0"
  # Prevenir cache de proxies e CDNs
  Header always set Surrogate-Control "no-store"
  # ETag único por requisição para forçar revalidação
  Header always set ETag "W/\"taskmeet-2025.12.04\""
</FilesMatch>

# Cache para arquivos JS/CSS
# IMPORTANTE: Vite SEMPRE gera arquivos com hash (ex: index-abc123.js)
# Como o Vite adiciona hash único a cada build, podemos cachear por muito tempo
# Quando o código mudar, o hash muda, gerando novo nome de arquivo
# O navegador automaticamente baixará o novo arquivo quando o HTML referenciar o novo hash

<IfModule mod_headers.c>
  # Arquivos JS/CSS COM HASH - cache longo (Vite garante versionamento via hash)
  # Se o hash mudar, o HTML terá nova referência e navegador baixará automaticamente
  <FilesMatch "\-[a-zA-Z0-9]{8,}\.(js|css)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Arquivos JS/CSS SEM HASH - sem cache (para desenvolvimento)
  <FilesMatch "^(?!.*\-[a-zA-Z0-9]{8,})\.(js|css)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
  </FilesMatch>
</IfModule>
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>

# Cache de arquivos estáticos
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  # CSS e JS sem hash não devem ser cacheados
  ExpiresByType text/css "access plus 0 seconds"
  ExpiresByType application/javascript "access plus 0 seconds"
  ExpiresByType application/json "access plus 1 day"
</IfModule>

# Compressão Gzip
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript application/json
</IfModule>

# Segurança - Headers
<IfModule mod_headers.c>
  # Prevenir clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # Prevenir MIME sniffing
  Header always set X-Content-Type-Options "nosniff"
  
  # XSS Protection
  Header always set X-XSS-Protection "1; mode=block"
  
  # HTTPS Strict Transport Security (descomente se usar HTTPS)
  # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Desabilitar listagem de diretórios
Options -Indexes

# Bloquear acesso a arquivos sensíveis
<FilesMatch "\.(env|git|gitignore|md)$">
  Order allow,deny
  Deny from all
</FilesMatch>
